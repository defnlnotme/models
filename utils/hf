#!/bin/bash
# Wrapper script for hf.py that activates the virtual environment

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Path to the virtual environment
VENV_PATH="$SCRIPT_DIR/../.venv"

# Path to the Python script
PYTHON_SCRIPT="$SCRIPT_DIR/hf.py"

# Check if virtual environment exists
if [ ! -d "$VENV_PATH" ]; then
    echo "Error: Virtual environment not found at $VENV_PATH"
    echo "Please create a virtual environment first:"
    echo "  python -m venv .venv"
    echo "  source .venv/bin/activate"
    echo "  pip install huggingface_hub"
    exit 1
fi

# Check if Python script exists
if [ ! -f "$PYTHON_SCRIPT" ]; then
    echo "Error: Python script not found at $PYTHON_SCRIPT"
    exit 1
fi

# Activate virtual environment and run the Python script
source "$VENV_PATH/bin/activate"

# Check if huggingface_hub is installed
if ! python -c "import huggingface_hub" 2>/dev/null; then
    echo "Error: huggingface_hub is not installed in the virtual environment"
    echo "Please install it with: pip install huggingface_hub"
    exit 1
fi

# Run the Python script with all passed arguments
python "$PYTHON_SCRIPT" "$@"
